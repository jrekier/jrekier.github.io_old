<!-- reviews -->
<div class="w-5/6">
  <p class="font-serif font-bold text-xl border-b border-gray-500 uppercase">Latest Reviews</p>
  {%- for post in collections.reviews -%}
    <article class="mb-4 mt-4 border-b border-gray-500">        
        <div class="mb-4 text-black rounded-lg">
          <!-- Image -->
          <div class="flex group">
            <div class="w-2/6">
              <a href="{{ post.url }}" class="w-24 rounded object-cover">   
                <img src="{{ post.data.cover_image }}" class="group-hover:opacity-75">
              </a>
            </div>
            <!-- Data -->
            <div class="w-4/6 ml-2">
              <div class="items-center">
                <p class="px-1 font-serif hover:text-red-700 text-sm uppercase">
                  {{ post.data.category }}
                </p>
              </div>
              <a href="{{ post.url }}">   
                <p class="px-1 font-serif group-hover:text-red-700 text-lg uppercase">
                  {{ post.data.title }}
                </p>
                <div class="px-1 mb-2 text-sm text-gray-700">
                  by <a href="#" class="text-gray-700 hover:text-red-700">{{post.data.author}}</a> on {{ post.date | readableDate }}
                </div>
                <div class="flex-wrap">
                  {% for tag in post.data.tags %}
                  <a href="/tags/{{tag}}"><span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-xs font-semibold text-gray-700 hover:text-red-400 mr-2">#{{tag}}</span></a>
                  {% endfor %}
                </div>
              </a>
              {# <p class="px-1 text-gray-700 leading-normal mb-2">
                {{post.data.description}}
              </p> #}
            </div>
          </div>
        </div>
      </a>
    </article>
  {%- endfor -%}

</div>
<!-- /sidebar -->