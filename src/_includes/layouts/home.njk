      {% if pagination.href.previous %}<a href="{{ pagination.href.previous }}"><span class="bg-black text-white no-underline py-2 px-3 rounded">Previous</span></a>{%else%}<span class="bg-black text-white no-underline py-2 px-3 rounded">Previous</span>{%endif%}
      {% if pagination.href.next %}<a href="{{ pagination.href.next }}"><span class="bg-black text-white no-underline py-2 px-3 rounded">Next</span></a>{%else%}<span class="bg-black text-white no-underline py-2 px-3 rounded">Next</span>{%endif%}
    </div> #}
